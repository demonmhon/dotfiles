{
	// Helpers
	"Dump": {
		"prefix": "dump",
		"description": "Custom helper, print the variable in JSON format",
		"body": [
			"{{{dump ${1:data}}}}"
		]
	},
	"If": {
		"prefix": "if",
		"body": [
			"{{#if ${1:true}}}\n\t\n{{/if}}"
		]
	},
	"With": {
		"prefix": "with",
		"body": [
			"{{#with ${1:data}}}\n\t\n{{/with}}"
		]
	},
	"Each": {
		"prefix": "each",
		"body": [
			"{{#each ${1:list} as |item|}}\n\t\n{{/each}}"
		]
	},

	// HTML
	"New Content Page Body": {
		"prefix": "tpl:page_content",
		"body": [
			"<div id=\"content-page--${1:new}\" class=\"content-page content-page--${1:new}\">",
			"\t<article class=\"content-page__page-article\">",
			"\t\t<div class=\"container\">",
			"\t\t\t<div class=\"row\">",
			"\t\t\t\t<div class=\"col-xs-12\">$2</div>",
			"\t\t\t</div>",
			"\t\t</div>",
			"\t</article>",
			"</div>"
		]
	},
	"New Content Page Header": {
		"prefix": "tpl:page_header",
		"body": [
			"<div class=\"content-page__page-header\">",
			"\t<div class=\"container\">",
			"\t\t<div class=\"row\">",
			"\t\t\t<div class=\"col-xs-12\">",
			"\t\t\t\t<div class=\"content-page__page-title\">",
			"\t\t\t\t\t<h1 class=\"content-page__page-title-text\">${1:Page Title}</h1>",
			"\t\t\t\t</div>",
			"\t\t\t</div>",
			"\t\t</div>",
			"\t<div>",
			"</div>",
		]
	}
}