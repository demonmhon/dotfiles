{
/*
	// Place your snippets for HTML here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/

	// Laravel: Blade
	"Laravel Blade If": {
		"prefix": "b:if",
		"body": [
			"@if (${1:true})",
			"\t",
			"@endif"
		]
	},
	"Laravel Blade For": {
		"prefix": "b:for",
		"body": [
			"@for ($$i = 0; $$i < 10; $$i++)",
			"\t{$$i}",
			"@endfor"
		]
	},
	"Laravel Blade Foreach": {
		"prefix": "b:foreach",
		"body": [
			"@foreach (${1:$$resources} as ${2:$$item})",
			"\t{ ${2:$$item}->${3:attr} }",
			"@endforeach"
		]
	},

	// Content
	"Page Body": {
		"prefix": "tpl:page_content",
		"body": [
			"<div id=\"content-page--${1:new}\" class=\"content-page content-page--${1:new}\">",
			"\t<div class=\"section section--${2:content}\">",
			"\t\t<div class=\"container\">",
			"\t\t\t<div class=\"row\">",
			"\t\t\t\t<div class=\"col-xs-12\">$3</div>",
			"\t\t\t</div>",
			"\t\t</div>",
			"\t</div>",
			"</div>"
		]
	},
	
	// EJS
	"EJS Dump": {
		"prefix": "ejs:dump",
		"body": [
			"<pre><%- JSON.stringify(${1:data}, null, '  '); %></pre>"
		]
	},


	// HTML
	"New Content Page Body": {
		"prefix": "page_content",
		"body": [
			"<div id=\"content-page--${1:new}\" class=\"content-page content-page--${1:new}\">",
			"\t<article class=\"content-page__page-article\">",
			"\t\t<div class=\"container\">",
			"\t\t\t<div class=\"row\">",
			"\t\t\t\t<div class=\"col-xs-12\">$2</div>",
			"\t\t\t</div>",
			"\t\t</div>",
			"\t</article>",
			"</div>"
		]
	},
	"New Content Page Header": {
		"prefix": "page_header",
		"body": [
			"<div class=\"content-page__page-header\">",
			"\t<div class=\"container\">",
			"\t\t<div class=\"row\">",
			"\t\t\t<div class=\"col-xs-12\">",
			"\t\t\t\t<div class=\"content-page__page-title\">",
			"\t\t\t\t\t<h1 class=\"content-page__page-title-text\">${1:Page Title}</h1>",
			"\t\t\t\t</div>",
			"\t\t\t</div>",
			"\t\t</div>",
			"\t<div>",
			"</div>",
		]
	}
}