{
	// Laravel: Blade
	"Laravel Blade If": {
		"prefix": "b:if",
		"body": [
			"@if (${1:true})",
			"\t",
			"@endif"
		]
	},
	"Laravel Blade For": {
		"prefix": "b:for",
		"body": [
			"@for ($$i = 0; $$i < 10; $$i++)",
			"\t{$$i}",
			"@endfor"
		]
	},
	"Laravel Blade Foreach": {
		"prefix": "b:foreach",
		"body": [
			"@foreach (${1:$$resources} as ${2:$$item})",
			"\t{ ${2:$$item}->${3:attr} }",
			"@endforeach"
		]
	},
	
	// EJS
	"EJS Dump": {
		"prefix": "ejs:dump",
		"body": [
			"<pre><%- JSON.stringify(${1:data}, null, '  '); %></pre>"
		]
	},

	// HTML
	"New Content Page Body": {
		"prefix": "page:content",
		"body": [
			"<div id=\"content-page--${1:new}\" class=\"content-page content-page--${1:new}\">",
			"\t<article class=\"content-page__page-article\">",
			"\t\t<div class=\"container\">$2</div>",
			"\t</article>",
			"</div>"
		]
	},
	"New Content Page Header": {
		"prefix": "page:header",
		"body": [
			"<div class=\"content-page__page-header\">",
			"\t<div class=\"container\">",
			"\t\t<div class=\"content-page__page-title\">",
			"\t\t\t<h1 class=\"content-page__page-title-text\">${1:Page Title}</h1>",
			"\t\t</div>",
			"\t<div>",
			"</div>",
		]
	},

	// Meta
	"Meta OG": {
		"prefix": "og",
		"body": [
			"<meta property=\"og:url\" content=\"\" />",
			"<meta property=\"og:type\" content=\"\" />",
			"<meta property=\"og:title\" content=\"\" />",
			"<meta property=\"og:description\" content=\"\" />",
			"<meta property=\"og:image\" content=\"\" />",
		]
	}
}